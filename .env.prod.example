# Production Environment Variables Template

# Database Configuration
DB_ROOT_PASSWORD=your_secure_root_password_here
DB_USER=osgb_user
DB_PASSWORD=your_secure_db_password_here
DB_NAME=osgb_production_db

# Security Configuration
JWT_SECRET=your_very_strong_jwt_secret_key_here_please_generate_a_secure_one
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=5002

# CORS Configuration (Update with your actual domain)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Frontend Configuration (Update with your actual domain)
REACT_APP_API_URL=https://yourdomain.com/api